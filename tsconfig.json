{
    "extends": "expo-module-scripts/tsconfig.base",
    "compilerOptions": {
        "outDir": "build",
        "target": "ESNext",
        "module": "CommonJS",
        "declaration": true,
        "sourceMap": true,
        "jsx": "react-native",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "strict": true
    },

    "include": ["./src/**/*"],
    "exclude": ["**/__mocks__/*", "**/__tests__/*", "node_modules", "build"]
}
