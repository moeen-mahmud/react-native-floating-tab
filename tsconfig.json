{
    "extends": "expo-module-scripts/tsconfig.base",
    "compilerOptions": {
        "outDir": "./build",
        "declaration": true,
        "emitDeclarationOnly": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "target": "ESNext",
        "module": "esnext",
        "jsx": "react-native"
    },

    "include": ["./src"],
    "exclude": ["**/__mocks__/*", "**/__tests__/*"]
}
