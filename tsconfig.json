{
    "compilerOptions": {
        "outDir": "./build",
        "jsx": "react-native",
        "paths": {
            "@react-native-floating-tab": ["./src/index"]
        },
        "esModuleInterop": true,
        "lib": ["esnext"],
        "module": "esnext",
        "moduleResolution": "node",
        "noFallthroughCasesInSwitch": true,
        "noImplicitReturns": true,
        "noImplicitUseStrict": false,
        "noStrictGenericChecks": false,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "strict": true,
        "target": "esnext"
    },
    "include": ["./src"],
    "exclude": ["**/__mocks__/*", "**/__tests__/*", "example"]
}
